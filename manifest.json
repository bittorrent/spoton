{
    "name": "BitTorrent Zero",
    "version": "1.0",
    "description": "Torrent downloading and search.",
    "content_scripts": {
        "matches": ["*://*/*"],
        "scripts": ["js/lib/jquery.js", "js/lib/underscore.js", "js/app/parser.js", "js/content/contentscript.js"],
        "run_at": "document_end"
    },
    "background": {
        "scripts": ["js/background/background.js"]
    }
    "browser_action": {
        "default_icon": "bt_icon.png",
        "default_popup": "index.html",
        "default_title" : "BitTorrent Zero"
    },
    "permissions" : [
        "tabs",
        "storage"
    ],
    "manifest_version": 2
}
