{
    "name": "BitTorrent Zero",
    "version": "1.0",
    "description": "Torrent downloading and searching.",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "bt_icon.png",
        "default_popup": "popup.html",
        "default_title" : "BitTorrent Zero"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["js/lib/jquery.js", "js/lib/underscore.js", "js/app/parser.js", "js/content/content.js"],
            "run_at": "document_end"
        }
    ],
    "permissions" : [
        "tabs",
        "storage",
        "notifications",
        "http://*/",
        "https://*/"
    ],
    "manifest_version": 2
}
