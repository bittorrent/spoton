{
    "name": "BitTorrent Zero",
    "version": "1.0",
    "description": "Torrent downloading and searching.",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "lib/img/bt_icon.png",
        "default_popup": "lib/popup.html",
        "default_title" : "BitTorrent Zero"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": [
                "lib/js/lib/jquery.js",
                "lib/js/lib/underscore.js",
                "lib/js/app/parser.js",
                "js/content/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions" : [
        "tabs",
        "storage",
        "notifications",
        "http://*/",
        "https://*/"
    ],
    "manifest_version": 2
}
